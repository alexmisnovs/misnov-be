    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "buyButtonLink": {
      "type": "component",
      "repeatable": false,
      "component": "pta.donate-button"
    }
  }
}
